Primary = OrangeRed
Secondary = MidnightBlue
BgColor = Wheat

body
  color Secondary
  background-color BgColor
  font-family 'Vollkorn' Serif
  font-size 120%
  line-height 1.5

div, html, body
  padding 0px
  margin 0px
  border 0px
  display block

.section
  padding 0.6rem 3rem 4rem 5rem
  margin none

.section>div
  margin-left auto
  margin-right auto
  width 600px

.section+.section
  background-color CornSilk

.section+.section+.section
  background-color BlancheDalmond

.section+.section+.section+.section
  background-color FloralWhite

.button
  background-color Primary
  color BgColor
  display inline-block
  text-decoration none
  padding 6px 18px 3px
  border-radius 3px
  margin 1em 1em
  cursor pointer

.button.alternative
  background-color Secondary

h1
h2
  color Primary

h1
  font-size 3.3em

h2
  font-size 2.0em
  margin-top 1.8em

h2 a
  color Secondary
  font-size .6em
  text-decoration none
  margin-left -16px

@require 'code'
