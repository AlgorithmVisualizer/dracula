Primary = OrangeRed
Secondary = MidnightBlue
SecondaryLight = OldLace

body
  color Secondary
  background-color Wheat
  font-family 'Vollkorn' Serif
  font-size 150%
  line-height 1.5

#content
  width 600px
  margin-left auto
  margin-right auto

.button
  background-color Primary
  color SecondaryLight
  display inline-block
  text-decoration none
  padding 6px 18px 3px
  border-radius 3px
  margin 1em 1em

.button.alternative
  background-color Secondary

pre code
  background-color SecondaryLight
  border-radius 3px

h1
h2
  color Primary

h1
  font-size 3.3em

h2
  font-size 2.0em
  margin-top 1.8em

@require 'code'
